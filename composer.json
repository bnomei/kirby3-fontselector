{
  "name": "bnomei/kirby3-fontselector",
  "description": "Kirby Section to select font family and font weight with two synced fields",
  "license": "MIT",
  "type": "kirby-plugin",
  "version": "5.0.0",
  "authors": [
    {
      "name": "Bruno Meilick",
      "email": "b@bnomei.com"
    }
  ],
  "keywords": [
    "kirby",
    "kirby-cms",
    "kirby-plugin",
    "select",
    "font",
    "familiy",
    "weight",
    "sync",
    "fields",
    "changes",
    "watch"
  ],
  "require": {
    "php": ">=8.2",
    "getkirby/composer-installer": "^1.2"
  },
  "require-dev": {
    "getkirby/cms": "^5.1.0",
    "larastan/larastan": "^v3.0.0",
    "laravel/pint": "^1.13",
    "pestphp/pest": "^v3.5.1",
    "spatie/ray": "^1.39",
    "rector/rector": "^2.1"
  },
  "conflict": {
    "getkirby/cms": "<5.0"
  },
  "config": {
    "allow-plugins": {
      "getkirby/composer-installer": true,
      "pestphp/pest-plugin": true
    }
  },
  "scripts": {
    "stan": "./vendor/bin/phpstan",
    "fix": "./vendor/bin/pint",
    "rector": "./vendor/bin/rector",
    "dist": [
      "composer fix",
      "composer install --no-dev --optimize-autoloader",
      "git rm -rf --cached .; git add .;"
    ],
    "kirby": [
      "composer install",
      "composer update",
      "composer install --working-dir=tests/kirby --no-dev --optimize-autoloader",
      "composer update --working-dir=tests/kirby",
      "sed -i.bak 's/function dump(/function xdump(/g' tests/kirby/config/helpers.php",
      "sed -i.bak 's/function e(/function xe(/g' tests/kirby/config/helpers.php"
    ]
  },
  "extra": {
    "kirby-cms-path": "tests/kirby"
  }
}
